{% extends "base.html" %}

{% block content %}

<h3>{{ state.name }} Recruits and Schools</h3>

Fumblerooski has {{ player_total }} player{{ player_total|pluralize }} from {{ state.name }} in the database.

{% if recent_signing_list %}
<h4>Recently Added Signings</h4>
<ul>
{% for signing in recent_signing_list %}
<li>{{ signing.player }} with <a href="{{ signing.school.get_absolute_url }}">{{ signing.school.name }}</a></li>
{% endfor %}
</ul>
{% endif %}

<h4>Top Colleges for Players from {{ state.name }}</h4>

<ol>
{% for college in top_colleges %}
<li><a href="{{ college.get_absolute_url }}">{{ college.name }}</a> - {{ college.number }}</li>
{% endfor %}
</ol>

<h4>Top High Schools in {{ state.name }}</h4>

<ol>
{% for school in top_high_schools %}
<li><a href="{{ school.get_absolute_url }}">{{ school.name }}</a>, {{ school.city.name|title }} - {{ school.number }}</li>
{% endfor %}
</ol>

<h4>Colleges in {{ state.name }}</h4>
<ul>
{% for college in state_colleges %}
<a href="{{ college.get_absolute_url }}">{{ college.name }}</a> {% if forloop.last %}{% else %}| {% endif %}
{% endfor %}
</ul>


{% endblock %}