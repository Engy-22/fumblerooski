{% extends "base.html" %}

{% block content %}

<h3><a href="{{ team.get_absolute_url }}">{{ team.name }}</a> recruits at {{ position.name }}</h3>

<table>
<tr>
  <th>Name</th><th>Year</th><th>High School</th><th>Post-High School</th>
</tr>
	{% for recruit in recruit_list %}
   <tr>
	<td>{{ recruit.player.full_name }} <font size="-3">{{ recruit.outcome.id }}</font></td>
	<td>{{ recruit.year }}</td>
	{% for school in recruit.player.school.all %}
    <td><a href="{{ school.get_absolute_url }}">{{ school.name }}</a> (<a href="{{ school.city.get_city_url }}">{{ school.city.name|title }}</a>, <a href="{{ school.city.state.get_absolute_url }}">{{ school.city.state.id }}</a>)</td>
    {% endfor %}
   </tr>
	{% endfor %}
</table>

<font size="-2">
<h4>Outcomes</h4>
<ol>
{% for outcome in outcome_list %}
  <li>{{ outcome.name }}</li>
{% endfor %}
</ol>
</font>

(See all <a href="{{ position.get_absolute_url }}">{{ position.name }} recruits</a>.)

{% endblock %}